<UserControl x:Class="DevilDaggersAssetEditor.Wpf.Gui.UserControls.ManageModsControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="96" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<StackPanel>
			<Label Style="{StaticResource BoldLabel}" Background="{StaticResource Gray28}" Margin="0,10,0,0" Name="ModsDirectoryLabel"/>
			<TextBlock Foreground="{StaticResource SuccessText}">Active mod files</TextBlock>
			<TextBlock Foreground="{StaticResource Text}">Mod files</TextBlock>
			<TextBlock Foreground="{StaticResource Gray6}">Other files</TextBlock>
		</StackPanel>
		<StackPanel Grid.Column="1">
			<Label Style="{StaticResource BoldLabel}" Background="{StaticResource Gray28}" Margin="0,10,0,0">Binary contents</Label>
		</StackPanel>
		<StackPanel Grid.Column="2">
			<Label Style="{StaticResource BoldLabel}" Background="{StaticResource Gray28}" Margin="0,10,0,0">Final modified assets</Label>
		</StackPanel>

		<ListView Grid.Row="1" Name="ModFilesListView" BorderThickness="0" HorizontalContentAlignment="Stretch" SelectionMode="Single" SelectionChanged="ModFilesListView_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemContainerStyle="{StaticResource ListViewItemContainerStyle}" Background="{StaticResource Gray2}" />

		<StackPanel Grid.Column="1" Grid.Row="1" Name="ChunkListView" />
	</Grid>
</UserControl>
