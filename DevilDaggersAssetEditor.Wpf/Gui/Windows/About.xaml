<Window x:Class="DevilDaggersAssetEditor.Wpf.Gui.Windows.AboutWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Title="About" Height="384" Width="384" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<StackPanel Style="{StaticResource PaddingStackPanel}">
		<Image Style="{StaticResource Logo}" />
		<TextBlock Style="{StaticResource TitleTextBlock}" HorizontalAlignment="Center">Devil Daggers Asset Editor</TextBlock>
		<TextBlock Style="{StaticResource TitleTextBlock}" HorizontalAlignment="Center" Name="VersionLabel" />
		<Label HorizontalAlignment="Center">Developed by Noah Stolk</Label>
		<Label HorizontalAlignment="Center">
			<Hyperlink NavigateUri="http://www.noahstolk.com" RequestNavigate="Hyperlink_RequestNavigate">
				www.noahstolk.com
			</Hyperlink>
		</Label>
	</StackPanel>
</Window>
