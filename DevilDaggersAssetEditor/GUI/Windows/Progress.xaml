<Window x:Class="DevilDaggersAssetEditor.GUI.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
	<StackPanel Margin="20,40,20,0">
		<ProgressBar Name="ProgressBar" Height="18" Minimum="0" Maximum="1" />
		<TextBlock Name="ProgressDescription" />
		<Button Name="OKButton" Click="OKButton_Click" Visibility="Hidden" Width="80" Margin="0,16,0,0">OK</Button>
	</StackPanel>
</Window>