<Window x:Class="DevilDaggersAssetEditor.GUI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tabControls="clr-namespace:DevilDaggersAssetEditor.GUI.UserControls.TabControls"
        mc:Ignorable="d"
        Title="Devil Daggers Asset Editor" Height="900" Width="1600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="18"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="0">
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="File">
					<MenuItem Name="ExtractMenuItem" Header="Extract binary file" />
					<Separator />
					<MenuItem Name="BinaryFileSpecificOptions" Header="Audio">
						
					</MenuItem>
				</MenuItem>
			</Menu>
		</DockPanel>
		<TabControl Grid.Row="1" SelectionChanged="TabControl_SelectionChanged" Name="TabControl">
			<TabItem Header="audio">
				<tabControls:AudioTabControl x:Name="AudioAudioTabControl" BinaryFileName="Audio" />
			</TabItem>
			<TabItem Header="dd">
				<tabControls:ModelBindingsTabControl x:Name="DDModelBindingsTabControl" BinaryFileName="DD" />
			</TabItem>
			<TabItem Header="core" IsEnabled="False"></TabItem>
			<TabItem Header="particle" IsEnabled="False"></TabItem>
		</TabControl>
	</Grid>
</Window>