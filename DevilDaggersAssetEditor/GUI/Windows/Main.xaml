<Window x:Class="DevilDaggersAssetEditor.GUI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Devil Daggers Asset Editor" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="18"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="0">
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="File">
					<MenuItem Name="ExtractMenuItem" Header="Extract binary file" />
					<MenuItem Name="CompressMenuItem" Header="Compress into binary file" />
					<Separator />
					<MenuItem Header="Import assets from folder" Click="Import_Click" />
				</MenuItem>
			</Menu>
		</DockPanel>
		<ScrollViewer Grid.Row="1">

		</ScrollViewer>
	</Grid>
</Window>