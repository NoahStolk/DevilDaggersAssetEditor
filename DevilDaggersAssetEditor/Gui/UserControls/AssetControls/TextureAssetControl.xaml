<UserControl x:Class="DevilDaggersAssetEditor.Gui.UserControls.AssetControls.TextureAssetControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
	<Grid x:Name="Data">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="9*" />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<TextBlock Style="{StaticResource AssetTextBlock}" Grid.Column="0" Text="{Binding AssetName}" />
		<TextBlock Style="{StaticResource AssetTextBlock}" Grid.Column="1" Text="{Binding EntityName}" />
		<TextBlock Style="{StaticResource AssetTextBlock}" Grid.Column="2" Text="{Binding Description}" />
		<TextBlock Style="{StaticResource AssetTextBlock}" Grid.Column="3" Name="TextBlockEditorPath" />
		<Button Grid.Column="4" Click="ButtonRemovePath_Click">Reset</Button>
		<Button Grid.Column="5" Click="ButtonBrowsePath_Click">Browse</Button>
	</Grid>
</UserControl>